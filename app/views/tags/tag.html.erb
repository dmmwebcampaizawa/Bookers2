<div class='container'>
<div class='row'>

<% if @range == "tag_name" %>
  <% @books.each do |book| %>
  <h1>Book search for "<%= @tag_name %>"</h1>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>image</th>
        <th>title</th>
        <th>opinion</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    </tbody>
  </table>
  <% end %>
<% else %>
  <h2>検索結果なし</h2>
<% end %>
</div>
</div>