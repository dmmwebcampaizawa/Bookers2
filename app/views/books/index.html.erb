<main>
<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <!--部分テンプレート読み込み-->
        <%= render 'list', books: @books %>
      </div>

  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
      <table class='table'>
        <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>img</td>
            <td><%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %></td>
            <td><%= book.opinion %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
          

    </div>
  </div>
</div>