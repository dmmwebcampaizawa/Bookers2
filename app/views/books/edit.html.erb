<main>
<p id="notice"></p>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>

          <% if @book.errors.any? %>
          <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>

          <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title, class: 'form-control book_title' %>
          </div>
          <div class="form-group">
            <label>Opinion</label>
            <%= f.text_area :body,  class: 'form-control book_title' %>
          </div>
          <div class="form-group">
            <label>Tag</label>
            <%= f.text_field :category,  class: 'form-control book_title' %>
          </div>
          <!--星レビュー機能-->
          <div id="star-rate<%= @book.id%>">
            <script>
              $('#star-rate<%= @book.id %>').empty();
              $('#star-rate<%= @book.id%>').raty({
              size      : 36,
              starOff   : '<%= asset_path('star-off.png') %>',
              starOn    : '<%= asset_path('star-on.png') %>',
              starHalf  : '<%= asset_path('star-half.png') %>',
              half      : true,
              readOnly: true,
              score: <%= @book.star %>,
              });
            </script>
          </div>
          <div class="form-group mt-3">
            <%= f.submit 'Update Book', class: 'btn btn-success' %>
          </div>
          <% end %>

          <%= link_to "Show", book_path(@book.id), class: 'link' %> |
        <%= link_to "Back", books_path, class: 'link' %>
      </div>
    </div>
  </div>
</main>