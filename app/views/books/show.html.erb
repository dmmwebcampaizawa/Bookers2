<main>
<p id="notice"><%= notice %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
      <!--部分テンプレート読み込み-->
      <%= render 'users/list', user: @user %>
      <%= render 'list', books: @book_ %>
      </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class='table'>
            <tr>
              <th><%= link_to user_path(@user.id) do %>
              <% image_tag @book.user.get_profile_image(80,80) %>
              <% end %>
              <br><%= link_to @user.name, user_path(@user.id) %></th>
              <th><%= link_to @book.title,book_path(@book.id) %></th>
              <th><%= @book.body %></th>
              <% if @book.user == current_user %>
              <th><%= link_to "Edit", edit_book_path(@book), class: 'btn btn-sm btn-success edit_book_15419' %></th>
              <th><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削しますか？", class: 'btn btn-sm btn-danger destroy_book_15419' %></th>
              <% end %>
            </tr>
        </table>
    </div>

    </div>
  </div>
</main>


