<div class='container'>
<div class='row'>
  <h1>Book search for "<%= @keyword %>"</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>title</th>
          <th>opinion</th>
          <th>Tag</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= image_tag book.user.get_profile_image(80,80) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
          <td><%= link_to book.category, search_category_path(keyword: book.category) %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
</div>
</div>